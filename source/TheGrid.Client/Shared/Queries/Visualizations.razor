@inherits TheGridComponentBase

<RadzenStack Orientation="Orientation.Vertical">
    <RadzenRow>
        <RadzenTabs @ref="_tabs" RenderMode="TabRenderMode.Server" Style="height: 100%;">
            <Tabs>
                @if (_visualizations != null)
                {
                    for (int i = 0; i < _visualizations.Length; i++)
                    {
                        var vis = _visualizations[i];
                        <RadzenTabsItem Text="@vis.Name" Style="height: 100%;">
                            @if (vis.VisualizationType == VisualizationType.Table)
                            {
                                <TheGrid.Client.Shared.Visualizations.Table QueryId="QueryId" TableVisualization="vis.TableVisualizationOptions" />
                            }
                        </RadzenTabsItem>
                    }
                }
            </Tabs>
        </RadzenTabs>
    </RadzenRow>
    <RadzenRow>
        <RadzenButton ButtonStyle="ButtonStyle.Light" ButtonType="ButtonType.Button" Click="ShowOptionsDialog">Options</RadzenButton>
    </RadzenRow>
</RadzenStack>