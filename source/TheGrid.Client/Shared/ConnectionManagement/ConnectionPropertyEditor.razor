
@if (ConnectionProperty != null)
{
    <RadzenFormField Text="@ConnectionProperty.Name">
        @if (ConnectionProperty.Type == ConnectionPropertyType.SingleLineText)
        {
            <RadzenTextBox Name="@HtmlUtility.GetSafeId(ConnectionProperty.Name)" Change="OnValueChangedAsync" AutoComplete=false />
        }
        else if (ConnectionProperty.Type == ConnectionPropertyType.ProtectedText)
        {
            <RadzenPassword Name="@HtmlUtility.GetSafeId(ConnectionProperty.Name)" Change="OnValueChangedAsync" AutoComplete=false />
        }

        @if (ConnectionProperty.Required)
        {
            <RadzenRequiredValidator Component="@HtmlUtility.GetSafeId(ConnectionProperty.Name)" Popup />
        }
    </RadzenFormField>    
}
