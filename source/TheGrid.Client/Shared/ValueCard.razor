<RadzenCard class="rz-my-2 value-card">
    <RadzenStack Orientation="Orientation.Vertical" Gap="2px">
        <RadzenText TextStyle="TextStyle.H5" TextAlign="TextAlign.Center" >
            @Title
        </RadzenText>
        <RadzenText TextStyle="TextStyle.H4" TextAlign="TextAlign.Center" class="@Class">
            <strong>
                @ChildContent
            </strong>
        </RadzenText>
    </RadzenStack>
</RadzenCard>
